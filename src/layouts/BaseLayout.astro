---
const { title = "VDR" } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/">
          <span class="mark" aria-hidden="true"></span>
          <strong class="brand-text">VDR</strong>
        </a>

        <nav class="nav">
          <a href="/rooms/">Кімнати</a>
          <a href="/access/">Доступ</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="meta">
        © {new Date().getFullYear()} Alimova Foundation — Virtual Data Room
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root{
    /* Brand */
    --pink:#D41B52;
    --yellow:#FFED00;
    --blue:#009FE3;

    /* UI */
    --ink:#111;
    --muted: rgba(17,17,17,.72);
    --bg:#fff;
    --line:rgba(0,0,0,.08);

    /* Premium bits */
    --shadow: 0 12px 34px rgba(0,0,0,.10);
    --shadow-sm: 0 8px 22px rgba(0,0,0,.08);
    --glass: rgba(255,255,255,.72);
    --glass-strong: rgba(255,255,255,.82);

    --r-xl: 22px;
    --r-lg: 18px;
    --r-md: 14px;

    --ease: cubic-bezier(.2,.8,.2,1);
  }

  *{ box-sizing:border-box; }
  html,body{ margin:0; padding:0; }

  body{
    font-family: system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
    color:var(--ink);
    background:
      radial-gradient(1200px 700px at 20% 0%, #d41b5214, transparent 60%),
      radial-gradient(900px 600px at 70% 15%, #009fe312, transparent 55%),
      radial-gradient(900px 700px at 80% 10%, #ffed0016, transparent 55%),
      linear-gradient(transparent, rgba(0,0,0,.015)),
      var(--bg);
  }

  /* Subtle “Astro-ish” texture */
  body:before{
    content:"";
    position:fixed;
    inset:0;
    pointer-events:none;
    opacity:.10;
    background-image:
      linear-gradient(rgba(0,0,0,.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,.06) 1px, transparent 1px);
    background-size: 44px 44px;
    mask-image: radial-gradient(900px 600px at 50% 0%, black, transparent 70%);
  }

  a{ color:inherit; }

  .wrap{ max-width:1040px; margin:0 auto; padding:28px 18px; }
  .top{ display:flex; align-items:center; justify-content:space-between; gap:16px; }

  .brand{ display:flex; align-items:center; gap:10px; text-decoration:none; }
  .brand-text{ letter-spacing:-.02em; }
  .mark{
    width:14px;height:14px;border-radius:5px;
    background:conic-gradient(from 180deg,var(--pink),var(--yellow),var(--blue),var(--pink));
    box-shadow:
      0 0 0 4px rgba(212,27,82,.08),
      0 10px 22px rgba(0,0,0,.10);
  }

  .nav{ display:flex; gap:10px; flex-wrap:wrap; font-size:14px; opacity:.92; }
  .nav a{
    text-decoration:none;
    padding:7px 10px;
    border-radius:12px;
    border:1px solid transparent;
    transition: transform .18s var(--ease), background .18s var(--ease), box-shadow .18s var(--ease), border-color .18s var(--ease);
  }
  .nav a:hover{
    background: rgba(255,255,255,.68);
    border-color: var(--line);
    box-shadow: var(--shadow-sm);
    transform: translateY(-1px);
  }

  /* Typography */
  h1,h2,h3{
    letter-spacing:-.03em;
    text-shadow: 0 1px 0 rgba(255,255,255,.55);
  }
  h1{ font-size:40px; line-height:1.08; margin:0 0 10px; }
  p{ margin:10px 0; line-height:1.6; color:var(--muted); }

  /* Hero */
  .hero{
    margin-top:26px;
    padding:26px;
    border:1px solid var(--line);
    border-radius: var(--r-xl);
    background:
      linear-gradient(135deg,#d41b5214,#009fe30f,#ffed001a),
      rgba(255,255,255,.55);
    box-shadow: var(--shadow);
    backdrop-filter: blur(8px);
    position: relative;
    overflow: hidden;
  }
  .hero:after{
    content:"";
    position:absolute;
    inset:-40% -20% auto auto;
    width:320px; height:320px;
    background: radial-gradient(circle at 30% 30%, rgba(0,159,227,.18), transparent 55%);
    transform: rotate(20deg);
    pointer-events:none;
  }

  /* Cards */
  .grid{ display:grid; gap:14px; grid-template-columns:repeat(12,1fr); margin-top:16px; }
  .card{
    grid-column:span 6;
    background: var(--glass);
    border:1px solid var(--line);
    border-radius: var(--r-lg);
    padding:18px;
    box-shadow: 0 10px 24px rgba(0,0,0,.06);
    backdrop-filter: blur(8px);
    transition: transform .18s var(--ease), box-shadow .18s var(--ease), background .18s var(--ease);
  }
  .card:hover{
    transform: translateY(-2px);
    box-shadow: var(--shadow);
    background: var(--glass-strong);
  }
  .card h2{ margin:0 0 8px; font-size:18px; color:var(--ink); }
  .card p{ margin:0; }

  /* Buttons */
  .btns{ display:flex; gap:10px; flex-wrap:wrap; margin-top:16px; }
  .btn{
    display:inline-flex; align-items:center; justify-content:center; gap:8px;
    padding:11px 14px;
    border-radius: var(--r-md);
    border:1px solid var(--line);
    text-decoration:none;
    background: rgba(255,255,255,.78);
    font-weight:650;
    box-shadow: 0 8px 18px rgba(0,0,0,.06);
    transition: transform .16s var(--ease), box-shadow .16s var(--ease), filter .16s var(--ease);
  }
  .btn:hover{
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
  .btn.primary{
    background: var(--pink);
    border-color: var(--pink);
    color:#fff;
    box-shadow: 0 14px 26px rgba(212,27,82,.22);
  }
  .btn.primary:hover{ filter: brightness(.98); }

  /* Forms (for /access) */
  label{ display:block; font-size:14px; font-weight:650; margin:14px 0 6px; color: rgba(17,17,17,.9); }
  input, textarea{
    width:100%;
    padding:12px 12px;
    border-radius: 14px;
    border:1px solid var(--line);
    background: rgba(255,255,255,.85);
    outline:none;
    font-size:16px;
    transition: box-shadow .16s var(--ease), border-color .16s var(--ease);
  }
  input:focus, textarea:focus{
    border-color: rgba(0,159,227,.55);
    box-shadow: 0 0 0 4px rgba(0,159,227,.12);
  }
  .form-card{
    margin-top:16px;
    background: var(--glass);
    border:1px solid var(--line);
    border-radius: var(--r-lg);
    padding:18px;
    box-shadow: 0 10px 24px rgba(0,0,0,.06);
    backdrop-filter: blur(8px);
  }

  .meta{ margin-top:18px; font-size:13px; opacity:.78; color:var(--muted); }

  @media(max-width:800px){
    h1{ font-size:32px; }
    .card{ grid-column:span 12; }
  }

  @media (prefers-reduced-motion: reduce){
    .btn, .card, .nav a{ transition:none; }
    .card:hover, .btn:hover, .nav a:hover{ transform:none; }
  }
</style>
