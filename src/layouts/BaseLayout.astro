---
const { title = "VDR" } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/">
          <span class="mark" aria-hidden="true"></span>
          <strong>VDR</strong>
        </a>

        <nav class="nav">
          <a href="/rooms/">Кімнати</a>
          <a href="/access/">Доступ</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        © {new Date().getFullYear()} Alimova Foundation — Virtual Data Room
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root{
    /* Brand */
    --pink:#D41B52;
    --yellow:#FFED00;
    --blue:#009FE3;

    /* UI */
    --ink:#111;
    --muted:rgba(17,17,17,.72);
    --bg:#fff;
    --card:#f7f7f8;
    --line:rgba(0,0,0,.10);

    --radius:18px;
    --radius-sm:12px;
    --shadow:0 10px 30px rgba(0,0,0,.06);
  }

  *{ box-sizing:border-box; }
  html,body{
    margin:0;
    padding:0;
    font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
    color:var(--ink);
    background:var(--bg);
  }

  a{ color:inherit; text-decoration:none; }
  a:hover{ opacity:.92; }

  .wrap{ max-width:1040px; margin:0 auto; padding:28px 18px; }

  .top{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:16px;
  }

  .brand{ display:flex; align-items:center; gap:10px; }

  .mark{
    width:14px;height:14px;border-radius:4px;
    background:conic-gradient(from 180deg,var(--pink),var(--yellow),var(--blue),var(--pink));
    box-shadow:0 0 0 3px rgba(212,27,82,.08);
  }

  .nav{ display:flex; gap:14px; flex-wrap:wrap; font-size:14px; opacity:.88; }
  .nav a{ padding:6px 8px; border-radius:10px; }
  .nav a:hover{ background:rgba(0,0,0,.04); }

  /* Page blocks */
  .hero{
    margin-top:26px;
    padding:22px;
    border:1px solid var(--line);
    border-radius:var(--radius);
    background:linear-gradient(135deg, rgba(212,27,82,.10), rgba(0,159,227,.08), rgba(255,237,0,.12));
    box-shadow:var(--shadow);
  }

  h1{ margin:0 0 8px; font-size:34px; letter-spacing:-.02em; }
  p{ margin:10px 0; line-height:1.55; color:var(--muted); }

  .grid{ display:grid; gap:14px; grid-template-columns:repeat(12,1fr); margin-top:16px; }

  .card{
    grid-column:span 6;
    background:var(--card);
    border:1px solid var(--line);
    border-radius:var(--radius);
    padding:16px;
  }

  .card h2{ margin:0 0 6px; font-size:18px; color:var(--ink); }
  .card p{ margin:0; }

  /* Buttons */
  .btns{ display:flex; gap:10px; flex-wrap:wrap; margin-top:14px; }
  .btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap:8px;
    padding:10px 12px;
    border-radius:var(--radius-sm);
    border:1px solid var(--line);
    background:#fff;
    font-weight:600;
  }

  .btn.primary{
    background:var(--pink);
    border-color:var(--pink);
    color:#fff;
    box-shadow:0 10px 22px rgba(212,27,82,.20);
  }

  /* Forms */
  label{ display:block; font-size:14px; font-weight:600; margin:14px 0 6px; }

  input, textarea{
    width:100%;
    padding:12px 12px;
    border-radius:14px;
    border:1px solid var(--line);
    background:#fff;
    outline:none;
    font-size:16px;
  }

  input:focus, textarea:focus{
    border-color:rgba(0,159,227,.55);
    box-shadow:0 0 0 4px rgba(0,159,227,.12);
  }

  .form-card{
    margin-top:16px;
    background:var(--card);
    border:1px solid var(--line);
    border-radius:var(--radius);
    padding:16px;
  }

  .notice{
    margin-top:12px;
    padding:10px 12px;
    border:1px solid var(--line);
    border-radius:14px;
    background:#fff;
    color:var(--muted);
    font-size:14px;
  }

  .notice.ok{
    border-color:rgba(0,159,227,.25);
    background:rgba(0,159,227,.06);
  }

  .notice.err{
    border-color:rgba(212,27,82,.25);
    background:rgba(212,27,82,.06);
  }

  .footer{
    margin-top:18px;
    font-size:13px;
    opacity:.75;
    color:var(--muted);
  }

  @media(max-width:800px){
    .card{ grid-column:span 12; }
    h1{ font-size:28px; }
  }
</style>
