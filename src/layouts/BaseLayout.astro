---
const { title = "VDR" } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    <!-- Allow pages to inject scripts/meta into <head> -->
    <slot name="head" />

    <style is:global>
      :root{
        --pink:#D41B52;
        --yellow:#FFED00;
        --blue:#009FE3;

        --ink:#111;
        --muted:rgba(17,17,17,.72);
        --bg:#fff;
        --line:rgba(0,0,0,.08);
        --shadow:0 10px 30px rgba(0,0,0,.08);

        --radius:22px;
        --radius-sm:14px;

        /* VDR: primary accent is BLUE (to feel different from DXP) */
        --btn-primary:var(--blue);
        --btn-secondary:var(--pink);
      }

      *{ box-sizing:border-box; }
      html,body{
        margin:0; padding:0;
        font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        color:var(--ink);
      }

      body{
        background:
          radial-gradient(1200px 700px at 20% 0%, #009fe314, transparent 60%),
          radial-gradient(900px 600px at 70% 15%, #d41b5212, transparent 55%),
          radial-gradient(900px 700px at 80% 10%, #ffed0016, transparent 55%),
          var(--bg);
      }

      a{ color:inherit; text-decoration:none; }
      a:hover{ opacity:.92; }

      .wrap{ max-width:1040px; margin:0 auto; padding:28px 18px; }
      .top{ display:flex; align-items:center; justify-content:space-between; gap:16px; }

      .brand{ display:flex; align-items:center; gap:10px; }
      .mark{
        width:14px;height:14px;border-radius:4px;
        background:conic-gradient(from 180deg,var(--blue),var(--yellow),var(--pink),var(--blue));
        box-shadow:0 0 0 3px rgba(0,159,227,.10);
      }

      .nav{ display:flex; gap:14px; flex-wrap:wrap; font-size:14px; opacity:.90; }
      .nav a{ padding:6px 10px; border-radius:12px; }
      .nav a:hover{ background:rgba(0,0,0,.04); }

      .hero{
        margin-top:26px;
        padding:24px;
        border:1px solid var(--line);
        border-radius:var(--radius);
        background:linear-gradient(135deg,#009fe314,#ffed0014,#d41b520e);
        box-shadow:var(--shadow);
      }

      h1{ margin:0 0 8px; font-size:34px; letter-spacing:-.02em; }
      p{ margin:10px 0; line-height:1.55; color:var(--muted); }

      .grid{ display:grid; gap:14px; grid-template-columns:repeat(12,1fr); margin-top:16px; }

      .card{
        grid-column:span 6;
        background:rgba(255,255,255,.78);
        border:1px solid var(--line);
        border-radius:18px;
        padding:16px;
        box-shadow:0 6px 18px rgba(0,0,0,.06);
        backdrop-filter: blur(6px);
      }
      .card h2{ margin:0 0 6px; font-size:18px; color:var(--ink); }
      .card p{ margin:0; }

      .btns{ display:flex; gap:10px; flex-wrap:wrap; margin-top:14px; }
      .btn{
        display:inline-flex; align-items:center; justify-content:center; gap:8px;
        padding:10px 14px;
        border-radius:999px;
        border:1px solid var(--line);
        background:#fff;
        font-weight:650;
        transition:transform .12s ease, box-shadow .12s ease, filter .12s ease;
      }
      .btn:hover{ box-shadow:0 8px 22px rgba(0,0,0,.08); transform:translateY(-1px); }

      .btn.primary{
        background:var(--btn-primary);
        border-color:var(--btn-primary);
        color:#fff;
      }
      .btn.primary:hover{ filter:brightness(.98); }

      .btn.secondary{
        background:var(--btn-secondary);
        border-color:var(--btn-secondary);
        color:#fff;
      }
      .btn.secondary:hover{ filter:brightness(.98); }

      .meta{ margin-top:18px; font-size:13px; opacity:.75; color:var(--muted); }

      @media(max-width:800px){
        .card{ grid-column:span 12; }
        h1{ font-size:28px; }
      }

      @media (max-width:520px){
        .btns{ flex-direction:column; }
        .btn{ width:100%; }
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/">
          <span class="mark" aria-hidden="true"></span>
          <strong>VDR</strong>
        </a>

        <nav class="nav" aria-label="Primary">
          <a href="/rooms/">Кімнати</a>
          <a href="/access/">Доступ</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="meta">
        © {new Date().getFullYear()} Alimova Foundation — Virtual Data Room
      </footer>
    </div>
  </body>
</html>
