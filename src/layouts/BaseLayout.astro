---
const { title = "VDR" } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    <!-- Allow pages to inject scripts/meta into <head> -->
    <slot name="head" />
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/">
          <span class="mark" aria-hidden="true"></span>
          <strong>VDR</strong>
        </a>

        <nav class="nav">
          <a href="/rooms/">Кімнати</a>
          <a href="/access/">Доступ</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="meta">
        © {new Date().getFullYear()} Alimova Foundation — Virtual Data Room
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root{
    --pink:#D41B52;
    --yellow:#FFED00;
    --blue:#009FE3;

    --ink:#111;
    --muted:rgba(17,17,17,.72);
    --bg:#fff;
    --card:#f7f7f8;
    --line:rgba(0,0,0,.08);
    --shadow:0 10px 30px rgba(0,0,0,.08);

    --radius:22px;
    --radius-sm:14px;
  }

  *{ box-sizing:border-box; }

  body{
    margin:0;
    font-family: system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
    color:var(--ink);
    background:
      radial-gradient(1200px 700px at 20% 0%, #d41b5214, transparent 60%),
      radial-gradient(900px 600px at 70% 15%, #009fe312, transparent 55%),
      radial-gradient(900px 700px at 80% 10%, #ffed0016, transparent 55%),
      var(--bg);
  }

  a{ color:inherit; text-decoration:none; }
  a:hover{ opacity:.92; }

  .wrap{max-width:1040px;margin:0 auto;padding:28px 18px}
  .top{display:flex;align-items:center;justify-content:space-between;gap:16px}
  .brand{display:flex;align-items:center;gap:10px;text-decoration:none}

  .mark{
    width:14px;height:14px;border-radius:4px;
    background:conic-gradient(from 180deg,var(--pink),var(--yellow),var(--blue),var(--pink));
    box-shadow:0 0 0 3px rgba(212,27,82,.08);
  }

  .nav{display:flex;gap:14px;flex-wrap:wrap;font-size:14px;opacity:.85}
  .nav a{ padding:6px 8px; border-radius:10px; }
  .nav a:hover{ background:rgba(0,0,0,.04); }

  .hero{
    margin-top:26px;
    padding:24px;
    border:1px solid var(--line);
    border-radius:var(--radius);
    background:linear-gradient(135deg,#d41b5214,#009fe30f,#ffed001a);
    box-shadow: var(--shadow);
  }

  h1{margin:0 0 8px;font-size:34px;letter-spacing:-.02em}
  p{margin:10px 0;line-height:1.55;color:var(--muted)}

  .grid{display:grid;gap:14px;grid-template-columns:repeat(12,1fr);margin-top:16px}
  .card{
    grid-column:span 6;
    background:rgba(255,255,255,.75);
    border:1px solid var(--line);
    border-radius:18px;
    padding:16px;
    box-shadow: 0 6px 18px rgba(0,0,0,.06);
    backdrop-filter: blur(6px);
  }
  .card h2{margin:0 0 6px;font-size:18px;color:var(--ink)}
  .card p{margin:0}

  .btns{display:flex;gap:10px;flex-wrap:wrap;margin-top:14px}
  .btn{
    display:inline-flex;align-items:center;justify-content:center;gap:8px;
    padding:10px 14px;border-radius:var(--radius-sm);border:1px solid var(--line);
    text-decoration:none;background:#fff;font-weight:600;
  }
  .btn.primary{background:var(--pink);border-color:var(--pink);color:#fff}
  .btn.primary:hover{filter:brightness(.98)}
  .btn:hover{box-shadow:0 8px 22px rgba(0,0,0,.08)}

  /* Forms */
  label{ display:block; font-size:14px; font-weight:600; margin:14px 0 6px; color:var(--ink); }
  input, textarea{
    width:100%;
    padding:12px 12px;
    border-radius:14px;
    border:1px solid var(--line);
    background:#fff;
    outline:none;
    font-size:16px;
  }
  input:focus, textarea:focus{
    border-color:rgba(0,159,227,.55);
    box-shadow:0 0 0 4px rgba(0,159,227,.12);
  }
  .form-card{
    margin-top:16px;
    background:rgba(255,255,255,.75);
    border:1px solid var(--line);
    border-radius:18px;
    padding:16px;
    box-shadow: 0 6px 18px rgba(0,0,0,.06);
    backdrop-filter: blur(6px);
  }

  .meta{margin-top:18px;font-size:13px;opacity:.75}

  @media(max-width:800px){
    .card{grid-column:span 12}
    h1{font-size:28px}
  }
</style>
